<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GhostActivity"
    android:id="@+id/ghost">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:id="@+id/ghostText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting game"
        android:id="@+id/gameStatus"
        android:layout_below="@+id/ghostText"
        android:layout_toRightOf="@+id/button_challenge"
        android:layout_toEndOf="@+id/button_challenge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHALLENGE"
        android:id="@+id/button_challenge"
        android:layout_below="@+id/gameStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/button_restart"
        android:layout_alignTop="@+id/button_challenge"
        android:layout_toRightOf="@+id/gameStatus"
        android:layout_toEndOf="@+id/gameStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User's Score"
        android:id="@+id/textView_user_score"
        android:layout_below="@+id/button_challenge"
        android:layout_alignRight="@+id/button_challenge"
        android:layout_alignEnd="@+id/button_challenge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer's Score"
        android:id="@+id/textView_computer_score"
        android:layout_alignTop="@+id/textView_user_score"
        android:layout_alignRight="@+id/button_restart"
        android:layout_alignEnd="@+id/button_restart" />


</RelativeLayout>
